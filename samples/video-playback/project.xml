<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="VideoPlayback" package="com.sample.VideoPlayback" version="1.0.0" company="Company Name" />

	<window width="1280" height="720" fps="60" vsync="false" background="#FF00FF" hardware="true" />

	<app main="Main" path="bin" file="VideoPlayback" />
	<source path="src" />
	<assets path="assets" />

	<haxelib name="openfl" />
	<haxelib name="extension-ffmpeg" />

	<!-- Debugging definitions -->
	<section if="debug">
		<haxedef name="HXCPP_DEBUG_LINK" />
		<haxedef name="HXCPP_STACK_TRACE" />
		<haxedef name="HXCPP_STACK_LINE" />
		<haxedef name="HXCPP_CHECK_POINTER" />

		<haxelib name="hxcpp-debug-server" />
	</section>
</project>